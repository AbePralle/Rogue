#-------------------------------------------------------------------------------
routine rogo_update_bootstrap( roguec_or_build="":String )
#-------------------------------------------------------------------------------
  which (roguec_or_build)
    case "roguec": Build.update_bootstrap( &roguec )
    case "build":  Build.update_bootstrap( &build )
    others:        Build.update_bootstrap( &roguec, &build )
  endWhich
endRoutine

