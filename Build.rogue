#-------------------------------------------------------------------------------
routine rogo_remake( remake_count:Int32 )
#-------------------------------------------------------------------------------
  remake
  loop (remake_count-1)
    println "> Sleep 1 second"
    System.sleep( 1 )
    remake
  endLoop
endRoutine

routine remake
