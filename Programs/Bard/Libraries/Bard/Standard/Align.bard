class Align
  ENUMERATE
    top_left
    top
    top_right

    left
    center
    right

    bottom_left
    bottom
    bottom_right

  SETTINGS
    xp = [0.0,0.5,1.0, 0.0,0.5,1.0, 0.0,0.5,1.0]
    yp = [0.0,0.0,0.0, 0.5,0.5,0.5, 1.0,1.0,1.0]

  METHODS
    method factor( alignment:Integer )->XY
      return XY( xp[alignment], yp[alignment] )

endClass
