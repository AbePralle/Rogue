class Local
  PROPERTIES
    t             : Token
    name          : String
    type          : Type
    index         : Integer
    initial_value : Cmd
    _cpp_name     : String

  METHODS
    method init( t, name )

    method cpp_name->String
      if (not _cpp_name) _cpp_name = Program.validate_cpp_name( name + "_" + index );
      return _cpp_name

endClass
