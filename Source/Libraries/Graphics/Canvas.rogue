class Canvas
  PROPERTIES
    size                           : XY
    background_color = Color.BLACK : Int32

  METHODS
    method init( size )

    method clear

    method clear( background_color )
      clear

    method height->Int32 [macro]
      this.size.y->Int32

    method flush

    method width->Int32 [macro]
      this.size.x->Int32
endClass
