class Graphics [singleton]
  GLOBALS
    stack = Graphics[]

  PROPERTIES
    canvas : Canvas
    value  : Int32

  METHODS
    method init

    method init( existing:Graphics )

    method save->Graphics
      stack.add( this )
      Graphics = Graphics( this )
      return Graphics

    method restore->Graphics
      if (stack.count == 0) Graphics = Graphics()
      else                  Graphics = stack.remove_last
      return Graphics
endClass
