class OpenGLRenderer : Renderer
  METHODS
    method init

    method clear( color:Integer )
      native @|glClearColor(
              |    (($color>>16)&255)/255.0f,
              |    (($color>>8)&255)/255.0f,
              |    ($color&255)/255.0f,
              |    (($color>>24)&255)/255.0f
              |);
              |glClear( GL_COLOR_BUFFER_BIT );
endClass
