$include "Attributes.rogue"

class Type
  PROPERTIES
    t          : Token
    name       : String
    attributes = Attributes()

    resolved   : Logical

  METHODS
    method init( t, name, attribute_flags:Integer )
      attributes.flags |= attribute_flags
      if (is_primitive) resolved = true

    method is_primitive->Logical
      return (attributes.flags & Attribute.IS_PRIMITIVE)?

endClass
