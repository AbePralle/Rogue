routine compare_files
  local file1 = File( "test.json" ).reader
  local file2 = File( "test2.json" ).reader

  local index = 0
  forEach (ch1 in file1)
    local ch2 = file2.read
    if (ch1 != ch2)
      println "First difference: $ != $ at $" (ch1->Integer,ch2->Integer,index)
      escapeForEach
    endIf
    ++index
  endForEach
